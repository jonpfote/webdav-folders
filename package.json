{
  "name": "webdav-folders",
  "displayName": "%displayName%",
  "description": "%description%",
  "publisher": "jonpfote",
  "icon": "webdav-logo.png",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.68.0"
  },
  "categories": [
    "Other"
  ],
  "capabilities": {
    "untrustedWorkspaces": {
      "supported": true
    },
    "virtualWorkspaces": true
  },
  "activationEvents": [
    "onCommand:jonpfote.webdav-folders.connect",
    "onFileSystem:webdav"
  ],
  "repository": {
    "url": "https://github.com/jonpfote/webdav-folders"
  },
  "private": true,
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "title": "%command.connect.title%",
        "command": "jonpfote.webdav-folders.connect"
      }
    ],
    "configuration": {
      "title": "%displayName%",
      "properties": {
        "jonpfote.webdav-folders": {
          "type": "object",
          "default": {},
          "additionalProperties": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "host"
            ],
            "default": {
              "host": "example.com",
              "ssl": true,
              "authtype": "basic",
              "username": "my-user",
              "password": "my-pass"
            },
            "properties": {
              "host": {
                "type": "string",
                "description": "Provide a hostname like \"example.com\" or \"my-site.com:1234\"."
              },
              "ssl": {
                "type": "boolean",
                "description": "(optional) True uses 'https' connections (default); false uses 'http'"
              },
              "authtype": {
                "type": "string",
                "enum": [
                  "basic",
                  "digest"
                ],
                "description": "(optional) Select the Type of authentication your server supports"
              },
              "username": {
                "type": "string",
                "description": "(optional) Username for authentication"
              },
              "password": {
                "type": "string",
                "description": "(optional) Password for authentication"
              }
            }
          },
          "markdownDescription": "Add folders by their ID to connect the server with `webdav://my-folder-id`."
        }
      }
    }
  },
  "l10n": "./l10n",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.68.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "webdav": "^4.11.2"
  }
}
